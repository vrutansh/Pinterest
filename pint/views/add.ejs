<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1 class="text-xl">Create a new Post.</h1>
    <hr class="opacity-70 mt-4">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="w-1/3 block px-3 mt-2 "  type="file" name="postimage">
        <input class="w-1/3 block px-3 py-2 border-2 rounded-md mt-2 text-black" type="text" placeholder="Title" name="title">
        <textarea class="w-1/3 h-40 block px-3 py-2 border-2 rounded-md mt-2 text-black" name="description" type="text" placeholder="Description"></textarea>
        <input class="w-1/3 block px-3 py-2 rounded-md mt-2 bg-red-700 " type="submit" value="Create Post" name="submit">
    </form>
</div>

